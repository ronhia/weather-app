<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.challenge.weather">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".presentation.application.WeatherApp"
        android:allowBackup="true"
        android:icon="@drawable/img_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Weather">

        <activity
            android:name=".presentation.features.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Weather.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.features.main.MainActivity"
            android:exported="true" />

    </application>

</manifest>